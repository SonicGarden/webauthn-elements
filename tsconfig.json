{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "./types",
    "emitDeclarationOnly": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
